<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblFirstName" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:text="FirstName"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/txtFirstName"/>
    <TextView
        android:text="LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLastName"
        app:layout_constraintBottom_toBottomOf="@+id/txtLastName" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:ems="10"
        android:id="@+id/txtFirstName"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:hint="Enter your firstname"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtLastName" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstName" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" android:hint="Enter your lastname"
        app:layout_constraintStart_toStartOf="@+id/guideline3"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtBirthDate" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLastName"
        android:layout_marginStart="8dp"
        android:hint="Enter your birthdate" app:layout_constraintStart_toStartOf="@+id/guideline3"/>
    <TextView
        android:text="BirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblBirthDate"
        app:layout_constraintBottom_toBottomOf="@+id/txtBirthDate" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCity" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCity" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtCity" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtBirthDate"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
        android:hint="Enter a city"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/guideline3" app:layout_constraintGuide_begin="100dp"
        android:orientation="vertical"/>
    <Button
        android:text="Validate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnValidate" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>